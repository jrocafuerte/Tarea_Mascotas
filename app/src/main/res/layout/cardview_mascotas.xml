<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="@dimen/corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibFotoLike"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/dog_bone_52"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tvNombreMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_mascota"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="@dimen/tamano_letra_cardview"
                android:layout_marginLeft="@dimen/margen_lnombre"/>
            <TextView
                android:id="@+id/tvCantidadLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cantidad_like"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margen_lcantidad"
                android:textSize="@dimen/tamano_letra_cardview"/>
            <ImageView
                android:id="@+id/imCantidadLike"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/dog_bone_50"
                android:layout_marginLeft="@dimen/margen_limagen"
                />


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>